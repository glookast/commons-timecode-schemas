<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:tns="http://timecode.commons.glookast.com" xmlns:xs="http://www.w3.org/2001/XMLSchema" version="1.0" targetNamespace="http://timecode.commons.glookast.com">

    <xs:simpleType name="Timecode">
        <xs:restriction base="xs:string">
            <xs:pattern value="^([0-1][0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9](:|;)[0-9]{2,}\/[0-9]+$" />
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="TimecodeDuration">
        <xs:restriction base="xs:string">
            <xs:pattern value="^[0-9]{2,}:[0-5][0-9]:[0-5][0-9](:|;)[0-9]{2,}\/[0-9]+$" />
        </xs:restriction>
    </xs:simpleType>

</xs:schema>
